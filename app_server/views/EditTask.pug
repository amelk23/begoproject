doctype html
html
  head
    title BEGO - Edit Profile
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', href='/logo/2.png')
    // Importing external layout from layout.css file
    link(rel='stylesheet', type='text/css', href='/layout.css')
    // New project Form layout
    link(rel='stylesheet', type='text/css', href='/form-layout.css')
    link(rel='stylesheet', type='text/css', href='/bego.css')
    // Import Javascript codes
    script(src='/script.js')
    script(src='/lastModified.js')
    // CSS style for div edit and its' button i.e. edit icon
    style.
      .edit{
      background-color: rgba(36, 55, 67, 0.2);
      background-size:cover;
      border-radius: 10px;
      width: 80%;
      border: none;
      padding: 40px;
      margin:auto;
      margin-top:100px;
      margin-bottom:40px;
      }
      .edit-list{
      outline: none;
      margin:auto;
      background-color: rgba(255,255,255,0.5);
      border-radius: 10px;
      margin-bottom: 20px;
      padding:10px;
      padding-left: 40px;
      }
      .edit-icon{
      position:static;
      margin:20px;
      float:right;
      cursor:pointer;
      }
      .edit-icon:hover{
      opacity:0.5;
      }
  body(onload='lastModifiedDate()')
  block content
    // Side navigation
    #mySidenav.sidenav
      a.closebtn(href='#', onclick='closeNav()') ×
      a(href='/Homelogin') Home
      a(href='/Findproject') Find Projects
      a(href='/Editprofile') Edit Profile
      a(href='/Preference') Your Preference
      a(href='/logout', onclick='confirmlogout()') Logout
    // Header section
    header
      a(href='Homelogin')
        img#logo(src='/logo/2.png', alt='Bego Logo')
      nav
        a.normalbtn(style='width:70px', onclick='openNav()') ☰ 
    // Edit section
    .edit
      h1 Edit Task
      hr
      // Edit Name
      .edit-list
        a.edit-icon(onclick="document.getElementById('edit-name').style.display='block'")
          img(src='/edit.jpg', alt='Edit icon')
        p
          b
            span(style='font-size:larger') Task Description
          br
          span(style='opacity:0.5')
            small #{taskdata.name}
        p
          b
            span(style='font-size:larger') Task Leader
          br
          span(style='opacity:0.5')
            small #{taskdata.member}
        p
          b
            span(style='font-size:larger') Rank
          br
          span(style='opacity:0.5')
            small #{taskdata.rank}
        p
          b
            span(style='font-size:larger') Deadline
          br
          span(style='opacity:0.5')
            small #{taskdata.deadline}
        // Edit Task Form
        #edit-name.modal
          span.close(onclick="document.getElementById('edit-name').style.display='none'", title='Close Modal') ×
          form.modal-content.animate(action=('/EditTask/'+taskdata._id), method='post')
            .container
              h1 Edit Task
              hr
              label
                b Task Description
              input(type='text', value= taskdata.name , name='newtask', required='')
              label
                b Task Leader
              input(type='text', value = taskdata.member , name='newleader', required='')
              label
                b Rank
              div
                select(style='outline:none', name='newrank')
                  option(value='1') 1 ★
                  option(value='2') 2 ★
                  option(value='3') 3 ★
                  option(value='4') 4 ★
                  option(value='5') 5 ★
              br
              label
                b Deadline
                br
              input#mydate(type='date', value= taskdata.deadline, name='newdeadline', min='2018-01-01', data-date-inline-picker='true', style='margin-bottom:40px;margin-top:5px', title='Format must be YYYY-MM-DD', required='')
              .clearfix
                button.cancelbtn(type='button', onclick="document.getElementById('edit-name').style.display='none'") Cancel
                button.signupbtn(type='submit') Update
      // Footer area
      footer
        p Copyright 2018 Bego. All Rights Reserved.
        p#lastMod
